#include <SoftwareSerial.h>
#include <Servo.h>
int Tx = 7;
int Rx = 8;
SoftwareSerial BT(Tx, Rx);

char letra;

 
// Declaramos la variable para controlar el servo
Servo servoMotor1;
Servo servoMotor2;
Servo servoMotor3;
Servo servoMotor4;

void setup()
{
  servoMotor1.attach(9);
  servoMotor2.attach(10);
  servoMotor3.attach(11);
  servoMotor4.attach(12);
 
  servoMotor1.write(0);
  servoMotor2.write(0);
  servoMotor3.write(0);
  servoMotor4.write(0);
  BT.begin(9600);
}

void loop()
{

  if (BT.available())
    letra = BT.read();
  if (letra == 'A')           //hacia adelante
  {
    for (int i = 0; i <= 180; i++)
    {
    servoMotor3.write(i);
    servoMotor4.write(i);
    }
 
    for (int i = 179; i > 0; i--)
    {
   
    servoMotor3.write(i);
    servoMotor4.write(i);
    
    }
    servoMotor2.write(0);
    servoMotor1.write(0);
  }
  if (letra == 'B')     //hacia atr√°s
  {
    for (int i = 0; i <= 180; i++)
    {
      servoMotor1.write(i);
      servoMotor2.write(i);
    }
 
    for (int i = 179; i > 0; i--)
    {
   
      servoMotor1.write(i);
      servoMotor2.write(i);
    
    }
    servoMotor3.write(0);
    servoMotor4.write(0);
  
  }
 if (letra == 'C')          //hacia la derecha
  {
        for (int i = 0; i <= 180; i++)
    {
    servoMotor3.write(i);
    servoMotor1.write(i);
    }
 
    for (int i = 179; i > 0; i--)
    {
   
    servoMotor3.write(i);
    servoMotor1.write(i);
    
    }
    servoMotor2.write(0);
    servoMotor4.write(0);
  }
  if (letra == 'D')         //hacia la izquierda
  {
        for (int i = 0; i <= 180; i++)
    {
    servoMotor2.write(i);
    servoMotor4.write(i);
    }
 
    for (int i = 179; i > 0; i--)
    {
   
    servoMotor2.write(i);
    servoMotor4.write(i);
    
    }
    servoMotor3.write(0);
    servoMotor1.write(0);
  
  }  
  if (letra == 'E')               //hacia arriba
  {
        for (int i = 0; i <= 180; i++)
    {
    servoMotor3.write(i);
    servoMotor4.write(i);
    servoMotor1.write(i);
    servoMotor2.write(i);
    }
 
    for (int i = 179; i > 0; i--)
    {
   
    servoMotor3.write(i);
    servoMotor4.write(i);
    servoMotor1.write(i);
    servoMotor2.write(i);
    
    }

  
  }  
  if (letra == 'G')               //hacia arriba
  {
    servoMotor3.write(0);
    servoMotor4.write(0);
    servoMotor1.write(0);
    servoMotor2.write(0);
  
  }   

}
